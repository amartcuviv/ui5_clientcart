<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    controllerName="fioritest.fioritest.controller.CustomerDetailView">

    <Page id="idCustomerDetailPage" title="Detalle Cliente">
        <content>
            <VBox
                id="_IDGenVBox"
                class="customerDetailVBox sapUiResponsiveMargin"
                width="400px">   
                <items>
                    <Title id="_IDGenTitle"
                           text="{customerModel>/Name}"
                           level="H2"
                           class="customerNameTitle" />  <!-- estilo para el nombre en la clase css (por incluir) -->

                    <ObjectAttribute
                        id="_IDGenObjectAttributeCustomerId"
                        title="ID Cliente"
                        text="{customerModel>/CustomerID}"
                        class="customerAttribute" />

                    <ObjectAttribute
                        id="_IDGenObjectAttributeEmail"
                        title="Email"
                        text="{customerModel>/Email}"
                        class="customerAttribute" />
 

                </items>
            </VBox>
        </content>
    </Page>
</mvc:View>